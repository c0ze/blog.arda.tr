---
interface Props {
  slug: string;
  title: string;
  date: Date;
  excerpt: string;
  tags: string[];
}

const { slug, title, date, excerpt, tags } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group rounded-lg border border-border bg-gradient-to-br from-card to-card/50 hover:shadow-xl hover:border-primary/50 transition-all duration-300 animate-fade-in">
  <div class="p-6">
    <div class="flex items-center gap-2 text-sm text-muted-foreground mb-3">
      <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M8 2v4"/>
        <path d="M16 2v4"/>
        <rect width="18" height="18" x="3" y="4" rx="2"/>
        <path d="M3 10h18"/>
      </svg>
      <time datetime={date.toISOString()}>{formattedDate}</time>
    </div>
    <h2 class="text-xl font-semibold group-hover:text-primary transition-colors mb-2">
      <a href={`/blog/${slug}`} class="hover:underline">
        {title}
      </a>
    </h2>
    <p class="text-muted-foreground line-clamp-2 mb-4">
      {excerpt}
    </p>
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag) => (
        <span class="inline-flex items-center rounded-md bg-secondary px-2.5 py-0.5 text-xs font-mono font-medium text-secondary-foreground hover:bg-primary hover:text-primary-foreground transition-colors cursor-pointer">
          #{tag}
        </span>
      ))}
    </div>
    <a
      href={`/blog/${slug}`}
      class="inline-flex items-center gap-2 text-sm font-medium text-primary hover:gap-3 transition-all"
    >
      Read more
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14"/>
        <path d="m12 5 7 7-7 7"/>
      </svg>
    </a>
  </div>
</article>

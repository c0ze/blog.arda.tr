---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found - Coze">
  <section class="container mx-auto px-4 py-32 text-center">
    <h1 class="text-6xl font-bold mb-4 text-primary">404</h1>
    <p class="text-xl text-muted-foreground mb-8">
      The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="inline-flex items-center justify-center gap-2 rounded-md bg-primary px-6 py-3 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
    >
      Go Home
    </a>
  </section>
</BaseLayout>
